<div class="main">
  <% if !current_user.mentor.profile_img.empty? %>
    <img src=<%= current_user.mentor.profile_img %> width="125" height="125">
  <% else %>
    <img src='/images/no-photo.png' width="125" height="125">
  <% end %>

<h1><%= current_user.mentor.first_name %></h1>
<h3><%= current_user.mentor.username %></h3>
<h3><%= current_user.mentor.location %></h3>

<br>

<h3><%= current_user.mentor.first_name %>'s programming languages</h3>
<% if current_user.mentor.languages.empty? %>
  <p><%= current_user.mentor.first_name %> has not added any programming languages yet.</p>
<% else %>
  <ul>
    <% current_user.mentor.languages.each do |language| %>
    <li><%= language.name %></li>
    <% end %>
  </ul>
<% end %>
</div>
