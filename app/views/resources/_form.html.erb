<%= form_for resource do |f| %>
  <p><%= f.label :website, "website (i.e. StackOverflow.com, RubyOnRails.org)" %>
  <%= f.text_field :website %></p>

  <p><%= f.label :title, "resource title" %>
  <%= f.text_field :title %></p>

  <p><%= f.label :url, "link to resource"%>
  <%= f.text_field :url%></p>

  <p><%= f.label :language_id, "language" %>
  <%= f.collection_select :language_id, Language.all, :id, :name, :include_blank => true %></p>

  <p><%= f.label :subfield_id, "choose a subfield" %>
  <%= f.collection_select :subfield_id, Subfield.all, :id, :name, :include_blank => true %></p>

  <%= f.label :subfield_id, "or create a new subfield" %>

  <%= f.fields_for :subfield, Subfield.new do |subfields_field| %>
    <%= subfields_field.text_field :name %>
  <% end %></p>

  <%= f.hidden_field :mentor_id, value: current_user.id %>

  <%= f.submit "add resource" %>
<% end %>
