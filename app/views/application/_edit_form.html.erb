<h1>Edit your profile</h1>

<%= form_for user do |f|%>
  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br><br>

  <%= f.label :profile_img, "Profile Picture (URL)" %>
  <%= f.text_field :profile_img %><br><br>

  <%= f.label :location %>
  <%= f.text_field :location %><br><br>

  <%= f.label :github_link %>
  <%= f.text_field :github_link %><br><br>

  <%= f.submit "Edit profile" %>
<% end %>
